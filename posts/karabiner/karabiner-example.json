{
  "title": "Caps Lock Escape + Q = @",
  "rules": [
    {
      "description": "Caps Lock tap = Escape, Caps Lock + Q = Option+O (@)",
      "manipulators": [
        {
          "from": { "key_code": "caps_lock" },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 100,
            "basic.to_if_held_down_threshold_milliseconds": 0
          },
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "caps_lock_held",
                "value": 0
              }
            }
          ],
          "to_if_alone": [{ "key_code": "escape" }],
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "caps_lock_held",
                "value": 1
              }
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_lock_held",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": { "key_code": "q" },
          "to": [
            {
              "key_code": "0",
              "modifiers": ["right_option"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
